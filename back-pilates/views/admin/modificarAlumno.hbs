<div class="container" style="margin: 100px auto">
  <div class="row">
    <div class="col-6 offset-3">
        <h4>Modificar Alumno</h4>
        <form action="/admin/verAlumnos/modificar" method="post">
            <input type="hidden" name="id" value="{{alumno.id}}">
    
            <div class="row mb-3">
                <input type="text" class="form-control" name="nombre" value="{{alumno.nombre}}" placeholder="Nombre">
            </div>
            <div class="row mb-3">
                <input type="text" class="form-control" name="apellido" value="{{alumno.apellido}}" placeholder="Apellido">
            </div>
            <div class="row mb-3">
                <input type="text" class="form-control" name="email" value="{{alumno.email}}" placeholder="Email">
            </div>
    
            <button type="submit" class="btn btn-secondary">Guardar</button>
        </form>

        {{#if mensajeExito}}
        <p>{{mensajeExito}}</p>
        {{/if}}
        
        {{#if error}}
        <p>{{mensaje}}</p>
        {{/if}}
        
        </div>
